@model Onym.ViewModels.Role.RoleManageViewModel
@{
    ViewBag.Title = "EditUserRoles";
    ViewBag.Page = "UserManage";
}
<h2>Изменение ролей для пользователя @Model.UserName</h2>
 
<form asp-action="EditUserRoles" asp-controller="Admin" method="post">
    <input type="hidden" name="userId" value="@Model.UserId" />
    <div class="form-group">
        @foreach (var role in Model.AllRoles)
        {
            <input type="checkbox" name="roles" value="@role.Name"
                   @(Model.UserRoles.Contains(role.Name) ? "checked=\"checked\"" : "") />@role.Name <br />
        }
    </div>
    <button type="submit" class="btn btn-primary">Сохранить</button>
</form>